<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>autenticar</servlet-name>
        <servlet-class>controller.autenticarServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>registrar</servlet-name>
        <servlet-class>controller.registrarServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>cerrarSesionServlet</servlet-name>
        <servlet-class>controller.cerrarSesionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>enviarCorreoServlet</servlet-name>
        <servlet-class>controller.enviarCorreoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>restaurarContrasenaServlet</servlet-name>
        <servlet-class>controller.restaurarContrasenaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>envioARestaurarContraServlet</servlet-name>
        <servlet-class>controller.envioARestaurarContraServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>cambiarContrasenaServlet</servlet-name>
        <servlet-class>controller.cambiarContrasenaServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>autenticar</servlet-name>
        <url-pattern>/iniciar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>registrar</servlet-name>
        <url-pattern>/registro</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>cerrarSesionServlet</servlet-name>
        <url-pattern>/cerrarSesion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>enviarCorreoServlet</servlet-name>
        <url-pattern>/enviarCorreo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>restaurarContrasenaServlet</servlet-name>
        <url-pattern>/restaurarContrasena</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>envioARestaurarContraServlet</servlet-name>
        <url-pattern>/envioARestaurarContra</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>cambiarContrasenaServlet</servlet-name>
        <url-pattern>/cambiarContrasena</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
